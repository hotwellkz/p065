# ============================================
# Production Environment Variables (Synology)
# ============================================
# Скопируй этот файл в .env и заполни значения
# cp env.production.example .env

# ============================================
# Общие настройки
# ============================================
NODE_ENV=production
PORT=8080

# ============================================
# Firebase Admin SDK
# ============================================
# Полный JSON Service Account (рекомендуется)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# ИЛИ отдельные переменные
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ============================================
# Telegram API (для работы с SyntX)
# ============================================
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your-api-hash-here
SYNX_CHAT_ID=your-syntx-chat-id
TELEGRAM_SESSION_SECRET=your-64-char-hex-secret-here
TELEGRAM_SESSION_ENCRYPTED=your-encrypted-session-string-here

# ============================================
# Хранилище видео
# ============================================
# Путь к директории для хранения видео на Synology
STORAGE_ROOT=/volume1/shortsai/videos

# ============================================
# Публичный URL backend (КРИТИЧНО!)
# ============================================
# ВАЖНО: Это должен быть ПУБЛИЧНЫЙ URL, доступный из интернета!
# Blotato и другие внешние сервисы используют этот URL для доступа к медиа-файлам
# 
# Схема деплоя:
# - Backend физически работает на Synology (порт 8080)
# - Внешний доступ через VPS со статическим IP
# - VPS пробрасывает порт 5001 на Synology:8080 через VPN
#
# Формат: http://<VPS_IP>:<VPS_PUBLIC_PORT>
BACKEND_URL=http://185.104.248.130:5001

# ============================================
# CORS и Frontend
# ============================================
# URL фронтенда (для CORS)
FRONTEND_ORIGIN=https://your-frontend-domain.com

# ============================================
# Дополнительные настройки
# ============================================
# Логирование
LOG_LEVEL=info

# Таймауты
TELEGRAM_TIMEOUT=30000


